{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PNPM Workspace Configuration",
  "description": "Schema for pnpm-workspace.yaml",
  "type": "object",
  "required": ["packages"],
  "properties": {
    "packages": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Glob patterns for workspace packages",
      "examples": [
        ["packages/*", "apps/*"]
      ]
    }
  }
}
